{
  "name": "@antongolub/git-root",
  "version": "1.5.9",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "description": "Find the closest .git containing path",
  "type": "module",
  "exports": {
    ".": {
      "require": "./target/bundle/git-root.cjs",
      "import": "./target/bundle/git-root.mjs"
    }
  },
  "main": "target/bundle/git-root.cjs",
  "module": "target/bundle/git-root.mjs",
  "unpkg": "target/bundle/git-root.umd.js",
  "types": "typings/index.d.ts",
  "typescript": {
    "definition": "typings/index.d.ts"
  },
  "scripts": {
    "clean": "rimraf target typings flow-typed buildcache docs coverage buildstamp.json",
    "lint": "eslint src/**/*.{ts,js}",
    "lint:fix": "yarn lint --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "npm-run-all -p -l lint test:unit test:depcheck test:depaudit",
    "test:unit": "c8 -r html -r text -r lcov loadr -- uvu 'src/test'",
    "test:deps": "npm-run-all -p -l test:depcheck test:depauditfix",
    "test:depcheck": "npm_config_yes=true npx depcheck --ignores typedoc,tslib,tsm,@types/node,mkdirp,rimraf",
    "test:depaudit": "yarn audit --level=moderate --groups=dependencies; [[ $? -ge 4 ]] && exit 1 || exit 0",
    "test:depauditfix": "npm_config_yes=true npx yarn-audit-fix --audit-level=moderate --only=prod",
    "test:report": "yarn test && yarn push:report",
    "prebuild": "yarn clean && npx buildstamp --git --out.path buildstamp.json",
    "build": "npm-run-all -p -l build:es6 build:ts build:libdef build:bundle docs",
    "build:es6": "mkdirp target/es6 && tsc -p tsconfig.es6.json",
    "build:ts": "cpy src/main/ts/ target/ts/ --flat",
    "build:bundle": "microbundle --tsconfig tsconfig.es5.json build src/main/ts/index.ts -o target/bundle",
    "build:libdef": "libdefkit --tsconfig=tsconfig.es5.json --tsconfig=tsconfig.es6.json",
    "docs": "typedoc",
    "coveralls:push": "cat ./coverage/lcov.info | coveralls || exit 0",
    "push:report": "yarn coveralls:push",
    "uglify": "for f in $(find target -name '*.js'); do short=${f%.js}; terser -c -m -o $short.js -- $f; done",
    "postupdate": "yarn && yarn test:deps && yarn build && yarn test"
  },
  "dependencies": {
    "@qiwi/substrate": "^2.0.0",
    "tslib": "^2.5.0"
  },
  "devDependencies": {
    "@qiwi/libdefkit": "^5.0.0",
    "@qiwi/npm-run-all": "^4.1.7",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.13.0",
    "c8": "^7.12.0",
    "coveralls": "^3.1.1",
    "cpy-cli": "^4.2.0",
    "earljs": "^0.2.3",
    "eslint": "^8.34.0",
    "eslint-config-qiwi": "^2.0.8",
    "fs-extra": "^11.1.0",
    "loadr": "^0.1.1",
    "microbundle": "^0.15.1",
    "mkdirp": "^2.1.3",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "tempy": "^3.0.0",
    "terser": "^5.16.3",
    "ts-jest": "^29.0.5",
    "tsm": "^2.3.0",
    "typedoc": "^0.23.25",
    "typescript": "4.9.5",
    "uvu": "^0.5.6"
  },
  "keywords": [
    "git root",
    "git dir"
  ],
  "files": [
    "README.md",
    "CHANGELOG.md",
    "target",
    "typings",
    "flow-typed",
    "buildstamp.json"
  ],
  "author": "Anton Golub <mailbox@antongolub.ru>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/antongolub/git-root.git"
  },
  "bugs": {
    "url": "https://github.com/antongolub/git-root/issues"
  },
  "homepage": "https://github.com/antongolub/git-root/#readme"
}
